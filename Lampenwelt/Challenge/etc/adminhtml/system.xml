<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="lampenwelt" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1">
            <label>Lampenwelt</label>
            <tab>general</tab>
            <resource>Lampenwelt_Challenge::lampenwelt_settings</resource>
            <group id="general" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1">
                <label>General</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="api_url" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Url</label>
                    <comment>Fake Url for API request. You can put any Url here</comment>
                </field>
                <field id="api_login" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Login</label>
                    <comment>Fake Login for API request. You can put any Login here</comment>
                </field>
                <field id="api_password" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Url</label>
                    <comment>Fake Password for API request. You can put any Password here</comment>
                </field>
                <field id="success" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>API will return successful response</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>In case of "Yes", API response will be successful. In case of "No" - unsuccessful</comment>
                </field>
            </group>
        </section>
    </system>
</config>
